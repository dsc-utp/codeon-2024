---
import PartnersCard from "../components/PartnersCard.astro";

import sponser1 from "/public/assets/sponsor.png"

const partners = [
  { imageUrl: sponser1, altText: "Sponsor 1" },
  { imageUrl: sponser1, altText: "Sponsor 3" },
  { imageUrl: sponser1, altText: "Sponsor 4" },
  { imageUrl: sponser1, altText: "Sponsor 5" },
  { imageUrl: sponser1, altText: "Sponsor 5" },
];
---

<section class="container">
  {partners.map((partner) => (
    <PartnersCard {...partner} />
  ))}
</section>

<style>
  .container {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem; /* Ajusta el espacio entre las tarjetas seg√∫n sea necesario */
    margin: 0 auto; /* Centra el contenedor */
  }
</style>
