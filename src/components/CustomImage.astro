---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    mobileImgUrl: string | ImageMetadata;
    desktopImgUrl: string | ImageMetadata;
    alt: string;
    width: number;
    height?: number; // height opcional
    class_name? : string; // class opcional
}

const { mobileImgUrl, desktopImgUrl, alt, width, height, class_name } = Astro.props;
---

<picture>
    <source media="(max-width: 799px)" srcset={mobileImgUrl.src} />
    <source media="(min-width: 800px)" srcset={desktopImgUrl.src} />
    <Image
        src={desktopImgUrl}
        alt={alt}
        width={width}
        height={height ? height : "auto"}
        loading="lazy"
        class_name:{class_name}
    />
</picture>
