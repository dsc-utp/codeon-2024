---
interface Props {
  imageUrl: string;
  altText: string;
  slot: string;
}
const { imageUrl, altText, slot } = Astro.props;
---

<div class="card">
  <img src={imageUrl} alt={altText} slot={slot} />
</div>

<style>
  .card {
    width: 300px;
    height: 120px;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    margin: 0px 10px;
    background: linear-gradient(
      90deg,
      rgba(29, 40, 62, 1) 0%,
      rgba(32, 37, 46, 1) 100%
    );
    box-sizing: border-box;
    flex: 1 0 var(--width);
    text-align: center;
    padding: 1.2rem;
    transition: transform 0.3s ease-in-out;
  }

  .card img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease-in-out;
  }

  .card:hover img {
    transform: scale(1.1);
    cursor: pointer;
  }
</style>
