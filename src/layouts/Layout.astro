---
import "../styles/normalize.css";

import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import { MY_URL } from "../config";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Bienvenidos a CodeOn 2024, sumérgete a descubrir las últimas tendencias de
    la tecnología, este evento se llevará a cabo en la Universidad Tecnológica
    del Perú, Av. Petit Thouars."
    />
    <meta name="viewport" content="width=device-width" />

    <link rel="shortcut icon" href="/public/favicon.svg" type="image/x-icon" />
    <link
      rel="icon"
      href="/public/favicon-96x96.png"
      sizes="96x96"
      type="image/png"
    />
    <link
      rel="icon"
      href="/public/favicon.svg"
      sizes="any"
      type="image/svg+xml"
    />

    <!-- OG -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={MY_URL} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Bienvenidos a CodeOn 2024, sumérgete a descubrir las últimas tendencias de
    la tecnología, este evento se llevará a cabo en la Universidad Tecnológica
    del Perú, Av. Petit Thouars."
    />
    <meta property="og:image" content={`${MY_URL}assets/web-preview.png`} />

    <!-- TWITER -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:site" content="@dsc_utp" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content="Bienvenidos a CodeOn 2024, sumérgete a descubrir las últimas tendencias de
    la tecnología, este evento se llevará a cabo en la Universidad Tecnológica
    del Perú, Av. Petit Thouars." />
    <meta
      property="twitter:image"
      content={`${MY_URL}assets/web-preview.png`}
    />

    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="app animateUp">
      <Navbar />
      <slot />
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --primary-font: "Poppins", sans-serif;
    --primary-color: #ff7a00;
    --primary-color-hover: #ff7a00;
    --bg-color: #192234;
    --text-color: #ffffff;
    --max-width: 1000px;
    --size-header: 80px;
  }
  [data-theme="light"] {
  }

  [data-theme="dark"] {
  }

  * {
    box-sizing: border-box;
  }
  html,
  body {
    padding: 0;
    margin: 0;
    font-family: var(--primary-font);
    scrollbar-gutter: 5px;
    background-color: var(--bg-color);
  }
  .app {
    display: flex;
    flex-direction: column;
    width: 100%;
    /*max-width: var(--max-width);*/
    /*padding: 1rem;*/
    /*padding-top: calc(var(--size-header));*/
    margin: 0 auto;
    min-height: 100vh;
    position: relative;
  }
  .app-main {
    width: 100%;
    max-width: var(--max-width);
    padding: 1rem;
    margin: 0 auto;
  }
  a {
    text-decoration: none;
  }
  /*------------SCROLL----------------*/
  ::-webkit-scrollbar {
    width: 0.3rem;
    background-color: rgb(255, 255, 255);
    border-radius: 0.5rem;
  }
  ::-webkit-scrollbar-thumb {
    background-color: var(--primary-color-hover);
    border-radius: 0.5rem;
  }
  /*------------Animates----------------*/
  .animateUp {
    animation: animateUp 1s;
  }

  @keyframes animateUp {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
